{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "space-before-function-paren": ["error", "never"],
        "semi": ["error", "always"],
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off"
    }
}